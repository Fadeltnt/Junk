' Fermer Word proprement
wordDoc.Close(False)
wordApp.Quit()
System.Runtime.InteropServices.Marshal.ReleaseComObject(wordDoc)
System.Runtime.InteropServices.Marshal.ReleaseComObject(wordApp)
GC.Collect()
GC.WaitForPendingFinalizers()

Dim wordApp As New Microsoft.Office.Interop.Word.Application()
Dim wordDoc As Microsoft.Office.Interop.Word.Document

Try
    wordDoc = wordApp.Documents.Open("C:\chemin\vers\ton\fichier.docx")

    ' üõ†Ô∏è Ici, ajoute ton code pour parcourir le document et extraire les donn√©es

    ' ‚úÖ Fermer Word proprement
    wordDoc.Close(False)
    wordApp.Quit()
    System.Runtime.InteropServices.Marshal.ReleaseComObject(wordDoc)
    System.Runtime.InteropServices.Marshal.ReleaseComObject(wordApp)
    GC.Collect()
    GC.WaitForPendingFinalizers()

Catch ex As Exception
    Console.WriteLine("Erreur : " & ex.Message)
Finally
    ' S'assure que Word est bien ferm√© m√™me en cas d'erreur
    If wordDoc IsNot Nothing Then wordDoc.Close(False)
    If wordApp IsNot Nothing Then wordApp.Quit()
End Try
